<div class="sm:basis-[48%] md:basis-[31%] xl:basis-[19%] rounded-lg border-y-gray-300 border shadow-lg flex flex-col">
    <img src="{{movie.imgSrc}}" alt="" class="w-full h-40 rounded-t-lg bg-slate-300 object-cover">
    <div class="p-4 flex flex-col flex-grow">
        <h2 class="text-2xl font-bold capitalize leading-7 mb-4">{{ movie.title }}</h2>
        <p>{{ movie.genre.name }}
        <br><b class="font-bold">{{movie.director.name}}</b>
        <br>{{movie.releaseDate|date('Y')}}</p>
        <div class="mt-auto">
            <a href="/movie/{{movie.id}}" class="inline-block py-1 px-4 rounded-md bg-blue-500 text-white text-sm mt-2 transition duration-300 ease-in-out hover:bg-cyan-800">En savoir + >>></a>
        </div>
    </div>
</div>