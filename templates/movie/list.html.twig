{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - {{page_title}}
{% endblock %}

{% block body %}
    <div class="text-right mb-5 -mt-10">
        <a href="{{ path('movie_crud_new') }}" class="text-white bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Ajouter un film</a>
        <a href="{{ path('movie_crud_index') }}" class="text-white bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Éditer les films</a>
        <a href="{{ path('app_genre_crud_index') }}" class="text-white bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Éditer les genres</a>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-4">
        {% for movie in movies %}
            {% include 'movie/movie_card.html.twig' with { 'movie': movie } %}
        {% else %}
            <p>Aucun film n'a été trouvé pour cette catégorie</p>
        {% endfor %}
    </div>

{% endblock %}
