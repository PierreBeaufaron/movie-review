{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Liste des films
{% endblock %}

{% block body %}

<div>
    <h1 class="text-5xl text-center font-bold mb-8">{{page_title}}</h1>
    <div class="columns-1 sm:columns-3 lg:columns-5 gap-4">
        {% for movie in movies %}
            {% include 'movie/movieCard.html.twig' with { 'movie': movie } %}
        {% endfor %}
    </div>
</div>
{% endblock %}
