{% extends 'base.html.twig' %}

{% block title %}{{page_title}}{% endblock %}

{% block body %}
    <a href="{{ path('app_genre_crud_new') }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Ajouter une catégorie</a>
    <div class="relative overflow-x-auto sm:rounded-lg my-6">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Identifiant
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Intitulé
                    </th>
                    <th colspan="2" scope="col" class="px-6 py-3 text-center">
                        Actions
                    </th>
                    {# <th scope="col" class="px-6 py-3">
                        Modifier
                    </th> #}
                </tr>
            </thead>
            <tbody>
                {% for genre in genres %}
                    <tr class="py-4 bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            {{ genre.id }}
                        </th>
                        <td class="px-6 py-4">
                            {{ genre.name }}
                        </td>
                        <td class="px-6 py-4">
                            <a href="{{ path('app_genre_crud_show', {'id': genre.id}) }}" class="text-blue-700 font-semibold">Voir</a>
                        </td>
                        <td class="px-6 py-4">
                            <a href="{{ path('app_genre_crud_edit', {'id': genre.id}) }}" class="text-blue-700 font-semibold">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_genre_crud_new') }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Ajouter une catégorie</a>
{% endblock %}
